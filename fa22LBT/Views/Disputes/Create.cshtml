@model fa22LBT.Models.Dispute

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dispute</h4>
@ViewBag.Message
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="DisputeID" class="form-control" />
                <input type="hidden" asp-for="DisputeTransaction.TransactionID" class="form-control" />
                <input type="hidden" name="transactionID" id="transactionID" class="form-control" value="@Model.DisputeTransaction.TransactionID"/>
            </div>
            <div class="form-group">
                <label asp-for="DisputeDescription" class="control-label"></label>
                <input asp-for="DisputeDescription" class="form-control" />
                <span asp-validation-for="DisputeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAmount" class="control-label"></label>
                <input asp-for="CorrectAmount" class="form-control" />
                <span asp-validation-for="CorrectAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

