@model IEnumerable<fa22LBT.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Deposit Requests</h1>
<h4>Note: Rejecting a deposit request deletes the transaction from the user's account!</h4>

@ViewBag.Message

<form asp-action="ManageDeposits">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionComments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToAccount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromAccount)
                </th>
                <th>Approve</th>
                <th>Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionComments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromAccount)
                    </td>
                    <td>
                        <input type="checkbox" name="approvedDeposits" value="@item.TransactionID" />
                    </td>
                    <td>
                        <input type="checkbox" name="rejectedDeposits" value="@item.TransactionID" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
