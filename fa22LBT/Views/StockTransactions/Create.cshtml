@model fa22LBT.Models.StockTransaction

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StockTransaction</h4>
<hr />
@ViewBag.Message
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Select Stock</label>
                @Html.DropDownList("SelectedStock", (SelectList)ViewBag.AllStocks, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="QuantityShares" class="control-label"></label>
                <input asp-for="QuantityShares" class="form-control" />
                <span asp-validation-for="QuantityShares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" id="Stock.StockPrice" name="Stock.StockPrice" value="0" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

