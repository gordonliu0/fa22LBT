@model fa22LBT.Models.StockTransaction

@{
    ViewData["Title"] = "Edit";
}

<h1>Sell</h1>

<h4>StockTransaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Sell">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockTransactionID" />
            <div class="form-group">
                <label asp-for="QuantityShares" class="control-label"></label>
                <input asp-for="QuantityShares" class="form-control" />
                <span asp-validation-for="QuantityShares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerShare" class="control-label"></label>
                <input asp-for="PricePerShare" class="form-control" />
                <span asp-validation-for="PricePerShare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

